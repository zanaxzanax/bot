{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es6",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "sourceMap": false,
    "allowJs": true,
    "target": "es5",
    "typeRoots": [
      "types"
    ]
  },
  "files": [
    "src/index.ts"
  ],
  "include": [
    "src/**/*",
    "types"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "./dist"
  ]
}